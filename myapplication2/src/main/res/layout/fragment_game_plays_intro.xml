<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GamePlays">

    <Button
        android:id="@+id/firstgameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="236dp"
        android:layout_marginTop="16dp"
        android:text="@string/add_game_play"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstgameSpinner"
        android:layout_width="215dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/first_game_spinner"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstgameHelp"
        android:layout_width="412dp"
        android:layout_height="642dp"
        android:layout_marginTop="200dp"
        android:gravity="top|center_horizontal"
        android:text="@string/first_game_play"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="122dp"
        android:layout_height="120dp"
        android:layout_marginStart="164dp"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/helper_arrow"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/helper_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>